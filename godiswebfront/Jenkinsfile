pipeline {
    agent any

    environment {
        DEPLOY_DIR = "/usr/local/nginx/html"
    }

    stages {

        stage('Checkout') {
            steps {
                deleteDir()
                checkout scm

                script {
                    env.GIT_COMMIT_MESSAGE = sh(
                        script: "git log -1 --pretty=%B",
                        returnStdout: true
                    ).trim()
                }
            }
        }

        stage('Install Dependencies') { 
            steps {
                echo "ğŸ“¦ NPM íŒ¨í‚¤ì§€ ì„¤ì¹˜"
                sh "npm install"
            }
        }

        stage('Build') {
            steps {
                echo "âš™ï¸ React ì•± ë¹Œë“œ"
                sh "npm run build"
            }
        }

        stage('Deploy') {
            steps {
                echo "ğŸš€ ë¹Œë“œ ê²°ê³¼ë¬¼ì„ Nginx ë””ë ‰í† ë¦¬ë¡œ ë°°í¬"

                sh """
                    sudo rm -rf ${DEPLOY_DIR}/* || true
                    sudo cp -r ${WORKSPACE}/dist/* ${DEPLOY_DIR}/
                """
            }
        }

        stage('Nginx Reload') {
            steps {
                echo "ğŸ” Nginx Reload"
                sh "sudo systemctl reload nginx"
            }
        }
    }

    post {
        success {
            slackSend (
                message: """
*React ë¹Œë“œ ì„±ê³µ ğŸ‰*
*Job:* ${env.JOB_NAME} [${env.BUILD_NUMBER}]
*URL:* ${env.BUILD_URL}
*ì»¤ë°‹ ë©”ì‹œì§€:* ${env.GIT_COMMIT_MESSAGE}
"""
            )
        }
        failure {
            slackSend (
                message: """
*React ë¹Œë“œ ì‹¤íŒ¨ âŒ*
*Job:* ${env.JOB_NAME} [${env.BUILD_NUMBER}]
*URL:* ${env.BUILD_URL}
*ì»¤ë°‹ ë©”ì‹œì§€:* ${env.GIT_COMMIT_MESSAGE}
"""
            )
        }
    }
}
