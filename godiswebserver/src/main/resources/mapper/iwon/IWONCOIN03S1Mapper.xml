<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.godisweb.mapper.iwon.IWONCOIN03S1Mapper">

    <!--
      SSOT: IWONCOIN03S1 (코인 지급 관리)
      approvals/approval_targets 저장은 서버 스키마 반영 후 확장.
      현재는 사전 검증(지갑 유무/잔액)만 수행.
    -->
    <select id="selectWalletRowsByEmployeeIds" resultType="map">
        SELECT EMP_NO AS employeeId
             , WALLET_ADDR AS walletAddress
             , COIN_BAL AS balance
          FROM IWN_EMP_WALLET
         WHERE EMP_NO IN
         <foreach collection="employeeIds" item="id" open="(" separator="," close=")">
            #{id}
         </foreach>
    </select>

</mapper>
